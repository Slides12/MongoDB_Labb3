<Window x:Class="Quiz_Configurator.Windows.AddCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator.Windows"
        mc:Ignorable="d"
        Title="Add Category" Height="220" Width="220">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="200" VerticalAlignment="Center">
            <Label Content="Add category:" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding NewCategory, Mode=TwoWay}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Height="30" Width="60" Margin="5" Content="Add" Click="Button_Click"/>
                <Button Height="30" Width="60" Margin="5" Content="Cancel" Click="cancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
